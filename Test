
package com.epay.transaction.repository;

import com.epay.transaction.entity.RefundBooking;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.domain.Specification;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.util.Optional;
import java.util.UUID;

/**
 * Class Name: RefundRepository
 * 
 * Description: Repository interface for managing RefundBooking entities.
 * Provides methods to retrieve refund booking details based on specific criteria.
 * 
 * Author: Nirmal
 * 
 * Copyright (c) 2025 [State Bank of India]
 * All rights reserved.
 * 
 * Version: 1.0
 */

@Repository
public interface RefundRepository extends JpaRepository<RefundBooking, UUID> {

    // Logger for debugging and tracking repository operations
    Logger logger = LoggerFactory.getLogger(RefundRepository.class);

    /**
     * Retrieves a RefundBooking entity based on the given ARRN (Acquirer Reference Number).
     * 
     * @param arrn The Acquirer Reference Number associated with the refund.
     * @return An Optional containing the RefundBooking if found, otherwise empty.
     */
    Optional<RefundBooking> findByArrnNumber(String arrn);

    /**
     * Retrieves a paginated list of RefundBooking entities that match the given specification.
     * 
     * @param specification The criteria for filtering refund bookings.
     * @param pageable Pagination details for retrieving data in pages.
     * @return A Page containing the filtered RefundBooking entities.
     */
    Page<RefundBooking> findAll(Specification<RefundBooking> specification, Pageable pageable);
}
